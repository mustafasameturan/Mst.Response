<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>Mustafa Samet Turan</Authors>
        <Description>This package includes the Response class, which represents general purpose HTTP responses, used to standardize response generation and communication in APIs.</Description>
        <PackageProjectUrl>www.mustafasameturan.com.tr</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/mustafasameturan/Mst.Response/blob/main/LICENSE</PackageLicenseUrl>
        <PackageIcon>mst-icon-bg.png</PackageIcon>
        <RepositoryUrl>https://github.com/mustafasameturan/Mst.Response</RepositoryUrl>
        <RepositoryType>Git</RepositoryType>
    </PropertyGroup>

    <ItemGroup>
      <None Update="mst-icon-bg.png">
        <Pack>True</Pack>
        <PackagePath></PackagePath>
      </None>
    </ItemGroup>

</Project>
